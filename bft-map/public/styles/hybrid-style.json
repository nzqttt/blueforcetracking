{
  "version": 8,
  "name": "OSM Only Test",
  "sources": {
    "osm": {
      "type": "vector",
      "url": "http://localhost:3650/api/tiles/maptiler-openmaptiles/tiles.json"
    }
  },
  "sprite": "http://localhost:3650/sprites/asia_malaysia-brunei-singapura_openstreetmap",
  "glyphs": "http://localhost:3650/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "osm-water",
      "type": "fill",
      "source": "osm",
      "source-layer": "water",
      "paint": {
        "fill-color": "#a0c8f0"
      }
    },
    {
      "id": "osm-roads",
      "type": "line",
      "source": "osm",
      "source-layer": "transportation",
      "paint": {
        "line-color": "#ff5500",
        "line-width": 1.2
      }
    },
    {
      "id": "osm-places",
      "type": "symbol",
      "source": "osm",
      "source-layer": "place",
      "layout": {
        "text-field": "{name}",
        "text-size": 12
      },
      "paint": {
        "text-color": "#ffffff",
        "text-halo-color": "#000000",
        "text-halo-width": 1
      }
    }
  ]
}
